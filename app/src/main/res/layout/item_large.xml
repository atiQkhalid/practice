<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/d230p"
    android:layout_height="@dimen/d430p"
    android:padding="@dimen/d5p"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_moviePoster"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d330p"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:background="@drawable/border_rounded"/>

    <TextView
        android:id="@+id/tv_movieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="@string/title"
        android:layout_marginTop="@dimen/d5p"
        android:textSize="@dimen/s17p"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/d5p"
        android:layout_marginBottom="@dimen/d5p">

        <TextView
            android:id="@+id/tv_releasingYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="2015"
            android:textSize="@dimen/s17p"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            android:textSize="@dimen/s17p"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="2h15m"
            android:textSize="@dimen/s17p"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_catagory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_rounded"
        android:textColor="@color/white"
        android:text="sci - fic"
        android:textAllCaps="true"
        android:textSize="@dimen/s15p"
        android:padding="@dimen/d2p"
        android:backgroundTint="@color/pink"/>

</LinearLayout>