<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/d150p"
    android:layout_height="@dimen/d300p"
    android:orientation="vertical"
    android:padding="@dimen/d5p">

    <ImageView
        android:id="@+id/iv_moviePoster"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d200p"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_movieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5p"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textSize="@dimen/s15p"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5p"
        android:layout_marginBottom="@dimen/d5p"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_releasingYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015"
            android:textColor="@color/black"
            android:textSize="@dimen/s15p" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            android:textSize="@dimen/s15p" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h15m"
            android:textColor="@color/black"
            android:textSize="@dimen/s17p" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_catagory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_rounded"
        android:backgroundTint="@color/pink"
        android:textSize="@dimen/s15p"
        android:padding="@dimen/d2p"
        android:text="sci - fic"
        android:textAllCaps="true"
        android:textColor="@color/white" />

</LinearLayout>